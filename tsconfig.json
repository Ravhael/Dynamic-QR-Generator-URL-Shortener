{
  "compilerOptions": {
    "target": "ES2017",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": false,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".next/**",
    "**/.next/**",
    ".next/types",
    ".next/types/**/*.ts",
    "**/*-backup.ts",
    "**/*-broken.ts",
    "**/*.old.tsx",
    "**/*.old.ts",
    // Exclude large legacy backup and optional integrations until refactored
    "components/Admin/AdminPanel_backup.tsx",
    "lib/actions.ts",
    "lib/auth-next.ts"
  ]
}
