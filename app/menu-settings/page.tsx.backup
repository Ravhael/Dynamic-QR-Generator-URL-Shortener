                    {roles.map((role) => (
                      <th key={role.name} className="px-6 py-3 text-center text-xs font-medium text-slate-500 dark:text-gray-400 uppercase tracking-wider">
                        <div className={`inline-flex px-2 py-1 rounded text-xs font-medium border ${getRoleBadgeColor(role.level)}`}>
                          {role.name}
