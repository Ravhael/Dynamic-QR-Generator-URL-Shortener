    loading: menuItemsLoading,
    error: menuItemsError,
    menuItems: dbMenuItems = [],
    flatMenuItems: dbFlatMenuItems = [],
    statistics = {
      total_items: 0,
      group_items: 0,
      regular_items: 0,
